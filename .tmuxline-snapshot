# This tmux statusbar config was created by tmuxline.vim
# on qua, 27 dez 2017

set -g status-justify "centre"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "#4f5b66"
set -g status-left-length "100"
set -g pane-active-border-fg "#4f5b66"
set -g status-bg "#343d46"
set -g message-command-fg "#a7adba"
set -g pane-border-fg "#343d46"
set -g message-bg "#4f5b66"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "#a7adba"
setw -g window-status-fg "#65737e"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "#343d46"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "#65737e"
setw -g window-status-separator ""
setw -g window-status-bg "#343d46"
set -g status-left "#[fg=#4f5b66,bg=#a7adba] #S #[fg=#a7adba,bg=#4f5b66,nobold,nounderscore,noitalics]#[fg=#a7adba,bg=#4f5b66] #F #[fg=#4f5b66,bg=#343d46,nobold,nounderscore,noitalics]#[fg=#65737e,bg=#343d46] #W #[fg=#343d46,bg=#343d46,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#343d46,bg=#343d46,nobold,nounderscore,noitalics]#[fg=#65737e,bg=#343d46] %a #[fg=#4f5b66,bg=#343d46,nobold,nounderscore,noitalics]#[fg=#a7adba,bg=#4f5b66] %b %d  %R #[fg=#a7adba,bg=#4f5b66,nobold,nounderscore,noitalics]#[fg=#4f5b66,bg=#a7adba] #H "
setw -g window-status-format "#[fg=#343d46,bg=#343d46,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=#343d46,bg=#343d46,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#343d46,bg=#4f5b66,nobold,nounderscore,noitalics]#[fg=#a7adba,bg=#4f5b66] #I  #W #[fg=#4f5b66,bg=#343d46,nobold,nounderscore,noitalics]"
